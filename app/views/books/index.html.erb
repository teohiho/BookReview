<h1><%= params[:category]%></h1>
<% if @book.count == 0 %>
	<section class="wn__bestseller__area bg--white pt--80  pb--30">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section__title text-center">
						<h2 class="title__be--2">All <span class="color--theme">Books</span></h2>
						<p>Tất cả sách có trong kho dữ liệu</p>
					</div>
				</div>
			</div>
			<div lass="tab__container mt--60"c>
				<div class="row single__tab tab-pane fade show active" id="nav-all" role="tabpanel">
					<div class="product__indicator--4 arrows_style owl-theme">
						<div class="single__product">
							<h1> không có sách nào  </h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
<% else %> 
	<section class="wn__bestseller__area bg--white pt--80  pb--30">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section__title text-center">
						<h2 class="title__be--2">All <span class="color--theme">Books</span></h2>
						<p>Tất cả sách có trong kho dữ liệu</p>
					</div>
				</div>
			</div>
			<div lass="tab__container mt--60"c>
				<div class="row single__tab tab-pane fade show active" id="nav-all" role="tabpanel">
					<div class="product__indicator--4 arrows_style owl-theme">
						<div class="single__product">
						
						<% @book.each do |book| %>
							<div class="col-lg-3 col-md-4 col-sm-6 col-12">
								<div class="product product__style--3">
									<div class="product__thumb">
										<a class="first__img" href="/books/<%=book.id %>">
										<%= image_tag book.book_img.url(:book_index), class: "book" %>
										</a>
									</div>
									<div class="product__content  content--center">
										<h4>
											<a class="first__img" href="/books/<%=book.id %>">
												<%= link_to book.title, class: "link" %> 
											</a>
										</h4>
										
									</div>
								</div>
							</div>
							
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

<% end %>	

